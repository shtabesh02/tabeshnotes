{
  "builds": [
    {
      "src": "backend",
      "command": "npm run build",
      "output": "backend/dist"
    },
    {
      "src": "frontend",
      "command": "npm run build",
      "output": "frontend/dist"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "frontend/dist/$1"
    }
  ]
}